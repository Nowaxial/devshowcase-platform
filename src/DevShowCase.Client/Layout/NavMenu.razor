@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor
@using DevShowcase.Client.Shared

<MudNavMenu>
    <MudNavLink Href="" Match="NavLinkMatch.All" Icon="@LucideIcons.Home" iconclass="lucide-icon">Home</MudNavLink>

    <AuthorizeView>
        <Authorized>
            <MudText Typo="Typo.subtitle2" Class="px-4 py-2 mt-2" Color="Color.Default">Admin</MudText>
            <MudNavLink Href="admin/dashboard" Icon="@LucideIcons.Dashboard" IconClass="lucide-icon">Dashboard</MudNavLink>
            <MudNavLink Href="admin/profile" Icon="@LucideIcons.User" IconClass="lucide-icon">Profile</MudNavLink>
            <MudNavLink Href="admin/experience" Icon="@LucideIcons.Briefcase" IconClass="lucide-icon">Experience</MudNavLink>
            <MudNavLink Href="admin/projects" Icon="@LucideIcons.Code" IconClass="lucide-icon">Projects</MudNavLink>
            <MudNavLink Href="admin/education" Icon="@LucideIcons.GraduationCap" IconClass="lucide-icon">Education</MudNavLink>
            <MudNavLink Href="admin/skills" Icon="@LucideIcons.Wrench" IconClass="lucide-icon">Skills</MudNavLink>
            <MudNavLink Href="logout" Icon="@LucideIcons.LogOut" IconClass="lucide-icon" Class="mt-4">Logout</MudNavLink>
        </Authorized>
        <NotAuthorized>
            <MudNavLink Href="login" Icon="@LucideIcons.LogIn" iconclass="lucide-icon">Login</MudNavLink>
            <MudNavLink Href="register" Icon="@LucideIcons.UserPlus" iconclass="lucide-icon">Register</MudNavLink>
        </NotAuthorized>
    </AuthorizeView>
</MudNavMenu>
