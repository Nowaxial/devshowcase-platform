@page "/admin/dashboard"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Admin Dashboard</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
    <MudText Typo="Typo.h3" GutterBottom="true">Dashboard</MudText>
    <MudText Typo="Typo.subtitle1" Class="mb-8">Welcome back! Manage your portfolio content here.</MudText>

    <MudGrid>
        <!-- Experience -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="3" Class="h-100 hover-card">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudIcon Icon="@Icons.Material.Filled.Work" Size="Size.Large" Color="Color.Primary" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Experience</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">Manage your work history and positions.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="/admin/experience" Variant="Variant.Text" Color="Color.Primary">Manage</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- Projects -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="3" Class="h-100 hover-card">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudIcon Icon="@Icons.Material.Filled.Code" Size="Size.Large" Color="Color.Secondary" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Projects</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">Showcase your coding projects and GitHub repos.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="/admin/projects" Variant="Variant.Text" Color="Color.Secondary">Manage</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>

        <!-- Profile -->
        <MudItem xs="12" sm="6" md="4">
            <MudCard Elevation="3" Class="h-100 hover-card">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" Color="Color.Info" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">Profile</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.body2">Update your personal info and bio.</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Href="/admin/profile" Variant="Variant.Text" Color="Color.Info">Edit Profile</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
