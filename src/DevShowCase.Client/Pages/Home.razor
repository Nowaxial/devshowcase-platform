@page "/"
@using DevShowcase.Client.Services
@inject NavigationManager NavigationManager
@inject AuthService AuthService

<PageTitle>DevShowcase - Build Your Developer Portfolio</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-16 mb-16">
    <!-- HERO SECTION -->
    <MudGrid Class="align-center justify-center my-16">
        <MudItem xs="12" md="6" Class="d-flex flex-column gap-4">
            <MudText Typo="Typo.h2" Class="font-weight-bold">
                Showcase Your Code.<br />
                <span class="mud-primary-text">Land Your Dream Job.</span>
            </MudText>
            <MudText Typo="Typo.h5" Class="mud-text-secondary">
                The modern portfolio platform for .NET developers. 
                Automated CV generation, AI-powered bios, and beautiful, themes.
            </MudText>
            <div class="d-flex gap-4 mt-8">
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="register">
                    Create Your Portfolio
                </MudButton>
                <MudButton Variant="Variant.Outlined" Color="Color.Secondary" Size="Size.Large" Href="portfolio/default">
                    View Demo Profile
                </MudButton>
            </div>
            <div class="mt-4 d-flex align-center gap-2">
                 <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small"/>
                 <MudText Typo="Typo.body2">Free for developers</MudText>
                 <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" Class="ml-4"/>
                 <MudText Typo="Typo.body2">Open Source</MudText>
            </div>
        </MudItem>
        <MudItem xs="12" md="6" Class="d-flex justify-center">
            <!-- Hero Visual / Mockup -->
            <MudPaper Elevation="4" Class="pa-4 rounded-lg d-flex align-center justify-center mud-theme-primary" Style="width: 100%; height: 400px; background: linear-gradient(135deg, var(--mud-palette-primary) 0%, var(--mud-palette-secondary) 100%);">
                 <MudIcon Icon="@Icons.Custom.Brands.Microsoft" Size="Size.Large" Style="font-size: 8rem; color: white; opacity: 0.8;" />
                 <MudText Typo="Typo.h1" Style="color: white; font-weight: 900; opacity: 0.2; position: absolute;">.NET</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-16" />

    <!-- FEATURES SECTION -->
    <MudText Typo="Typo.h3" Align="Align.Center" Class="mb-12 font-weight-bold">Why DevShowcase?</MudText>

    <MudGrid Spacing="4">
        <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="h-100 py-8 px-4 text-center">
                <div class="d-flex justify-center mb-4">
                    <MudAvatar Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large">
                        <MudIcon Icon="@Icons.Material.Filled.Description" Size="Size.Large" />
                    </MudAvatar>
                </div>
                <MudText Typo="Typo.h5" Class="font-weight-bold mb-2">Automated CVs</MudText>
                <MudText Typo="Typo.body1" Class="mud-text-secondary">
                    Stop wrestling with Word templates. 
                    Your portfolio automatically generates a professional, clean CV/Resume based on your data.
                </MudText>
            </MudCard>
        </MudItem>
         <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="h-100 py-8 px-4 text-center">
                <div class="d-flex justify-center mb-4">
                     <MudAvatar Color="Color.Secondary" Variant="Variant.Filled" Size="Size.Large">
                        <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Large" />
                    </MudAvatar>
                </div>
                <MudText Typo="Typo.h5" Class="font-weight-bold mb-2">AI-Powered Writing</MudText>
                <MudText Typo="Typo.body1" Class="mud-text-secondary">
                    Stuck on your bio? Let our integrated AI assistant generate compelling descriptions for your projects and experience.
                </MudText>
            </MudCard>
        </MudItem>
         <MudItem xs="12" md="4">
            <MudCard Elevation="2" Class="h-100 py-8 px-4 text-center">
                <div class="d-flex justify-center mb-4">
                     <MudAvatar Color="Color.Tertiary" Variant="Variant.Filled" Size="Size.Large">
                        <MudIcon Icon="@Icons.Material.Filled.Palette" Size="Size.Large" />
                    </MudAvatar>
                </div>
                <MudText Typo="Typo.h5" Class="font-weight-bold mb-2">Role-Based Themes</MudText>
                <MudText Typo="Typo.body1" Class="mud-text-secondary">
                    Whether you're a Backend wizard or a Frontend artist, choose a theme that fits your specific role and personality.
                </MudText>
            </MudCard>
        </MudItem>
    </MudGrid>

    <MudDivider Class="my-16" />

    <!-- FOOTER CTA -->
    <div class="text-center mb-16">
        <MudText Typo="Typo.h4" Class="font-weight-bold mb-4">Ready to showcase your work?</MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Href="register">
            Get Started Now
        </MudButton>
         <MudText Typo="Typo.body2" Class="mud-text-secondary mt-4">No credit card required.</MudText>
    </div>

</MudContainer>

